{% extends 'base.html.twig' %}

{% block title %}Trip{% endblock %}

{% block body %}
    <h1>Trip</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ trip.id }}</td>
            </tr>
            <tr>
                <th>Departure</th>
                <td>{{ trip.departure }}</td>
            </tr>
            <tr>
                <th>Arrival</th>
                <td>{{ trip.arrival }}</td>
            </tr>
            <tr>
                <th>Date_of_trip</th>
                <td>{{ trip.dateOfTrip ? trip.dateOfTrip|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Passengers</th>
                <td>{{ trip.passengers }}</td>
            </tr>
            <tr>
                <th>Trip_full</th>
                <td>{{ trip.tripFull ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Trip_completed</th>
                <td>{{ trip.tripCompleted ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('trip_index') }}">back to list</a>

    <a href="{{ path('trip_edit', {'id': trip.id}) }}">edit</a>

    {{ include('trip/_delete_form.html.twig') }}
{% endblock %}
